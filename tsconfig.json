{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules"
  ]
}
